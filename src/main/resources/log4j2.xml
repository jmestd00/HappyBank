<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="HappyBank" fileName="etc/logs/HappyBank.log">
            <PatternLayout pattern="%d{dd:MM:yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="HappyBank"/>
        </Root>
    </Loggers>
</Configuration>